<Window x:Class="ООО__Обувь_.Frames.AuthorizationFrame"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ООО__Обувь_.Frames"
        mc:Ignorable="d"
        Title="AuthorizationFrame" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Логин:" TextAlignment="Right" Margin="5"></TextBlock>
                <TextBlock Text="Пароль:" TextAlignment="Right" Margin="5"></TextBlock>
            </StackPanel>
            <StackPanel Orientation="Vertical" Width="130">
                <TextBox x:Name="tbLogin" Width="Auto" Margin="5"></TextBox>
                <TextBox x:Name="tbPassword" Width="Auto" Margin="5"></TextBox>

            </StackPanel>



        </StackPanel>
    </Grid>
</Window>
